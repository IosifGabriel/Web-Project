<div class="container" style="margin-top:50px">

    <div class="row">

      <!-- Blog Entries Column -->
      <div class="col-md-8">

        <h1 class="my-4">Articles 
          <small>-- Iosif's thoughts</small>
        </h1>

        <!-- Blog Post -->
        <% for(var i = articles.length - 1; i >= 0; i--) { %>
        <div class="card mb-4">
          <img class="card-img-top" src="<%=articles[i].image%>" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"><%=articles[i].title%></h2>
            <p class="card-text">
                <%articles[i].body%>
            </p>    
            <a href="/articles/<%= articles[i].id %>" class="btn btn-primary">Read More &rarr;</a>
          </div>
          <div class="card-footer text-muted">
            Posted on <%=articles[i].postDate%>
          </div>
        </div>
        <% } %>
      </div>
    </div>
</div>
