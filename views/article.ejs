<!-- Page Content -->
<div class="container" style="margin-top:50px;">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4"><%=article.title%></h1>

        <!-- Author -->
        <p class="lead">
          Written by <%=author%>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on <%=article.postDate%></p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" src="<%=article.image%>">

        <hr>

        <!-- Post Content -->
        <p class="lead">
            <%=article.body%>
        </p>

        <% if(locals.user) { %>
            <%  if(locals.user.id==article.author) { %>
                     <a class="btn btn-default" href='/articles/edit/<%=article._id%>'> Edit</a>
                     <a class="btn btn-danger delete-article" href='#' data-id='<%=article._id%>'> Delete </a>
             <% } %>
         <% } %>
      </div>
    </div>
</div>